<section class="content-header">
  <h1>
    Dashboard
    <small>Request</small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to "Cases", cases_path %></li>
    <li><%= link_to 'Requests', case_requests_path(params[:case_id]) %></li>
    <li class="active">View Requests</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Request Info</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <strong><i class="fa fa-envelope margin-r-5"></i>  Request Message</strong>
          <p class="text-muted">
            <%= @request.content %>
          </p>
        </div><!-- /.box-body -->
      </div>
    </div>
  </div>
</div>
<script>
  $("ul.sidebar-menu li").removeClass("active")
</script>  