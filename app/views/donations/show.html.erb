<section class="content-header">
  <h1>
    Dashboard
    <small>Donations</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/donations">Donations</a></li>
    <li class="active">View Donation</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Donation Info</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <strong><i class="fa fa-money margin-r-5"></i>  Amount</strong>
          <p class="text-muted">
            <%= @donation.amount %>
          </p>

          <hr>
          <h4><i class="fa fa-user margin-r-5"></i>  Donor Info</h4>
          <hr>

          <strong><i class="fa fa-user margin-r-5"></i> Name</strong>
          <p class="text-muted"><%= @donation.name %></p>

          <hr>

          <strong><i class="fa fa-envelope margin-r-5"></i> Email</strong>
          <p class="text-muted"><%= @donation.email %></p>

          <hr>

          <strong><i class="fa fa-mobile margin-r-5"></i> Contact Number</strong>
          <p class="text-muted"><%= @donation.contact_number %></p>


          <hr>

          <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>
          <p class="text-muted"><%= @donation.city %>, <%= @donation.state %>, <%= @donation.country %></p>

        </div><!-- /.box-body -->
      </div>
    </div>
  </div>
</div>

<script>
  $("ul.sidebar-menu li").removeClass("active")
  $("ul.sidebar-menu li:nth-child(5)").addClass("active")
</script>  