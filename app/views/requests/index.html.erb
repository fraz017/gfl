<section class="content-header">
  <h1>
    Dashboard
    <small>Requests</small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to "Cases", cases_path %></li>
    <li class="active">Requests</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listing Requests For this case</h3>
          <div class="box-tools">
            <div class="input-group">
              <%= link_to '<i class="fa fa-plus"></i> Add Request'.html_safe, new_case_request_path(params[:case_id]), class: "btn btn-success" %>
            </div>
          </div>
        </div><!-- /.box-header -->
        <br>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover table-bordered">
            <tbody><tr>
              <th>Content</th>
              <th>Actions</th>
            </tr>
            <%@requests.each do |request|%>
              <tr>
                <td><%= request.content %></td>
                <td><%= link_to 'Show', [request.case, request], class: "btn btn-xs btn-primary" %>
                <%= link_to 'Edit', edit_case_request_path(request.case, request), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', [request.case, request], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
              </tr>
            <%end%>
            <%if @requests.count < 1%>
            <tr>
              <td colspan="5" class="box-title"><h3>You don not have any requests yet. Add some</h3></td>
            </tr>
            <%end%>
          </tbody></table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>

<script>
  $("ul.sidebar-menu li").removeClass("active")
</script>  