<section class="content-header">
  <h1>
    Dashboard
    <small>Admin</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admins">Admins</a></li>
    <li class="active">View Admin</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Admin Info</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <strong><i class="fa fa-envelope margin-r-5"></i>  Email</strong>
          <p class="text-muted">
            <%= @admin.email %>
          </p>

          <hr>

          <strong><i class="fa fa-user margin-r-5"></i> First Name</strong>
          <p class="text-muted"><%= @admin.first_name %></p>

          <hr>

          <strong><i class="fa fa-user margin-r-5"></i> Last Name</strong>
          <p class="text-muted"><%= @admin.last_name %></p>

          <hr>

          <strong><i class="fa fa-mobile margin-r-5"></i> Mobile Number</strong>
          <p class="text-muted"><%= @admin.mobile_number %></p>

        </div><!-- /.box-body -->
      </div>
    </div>
  </div>
</div>
<script>
  $("ul.sidebar-menu li").removeClass("active")
  $("ul.sidebar-menu li#admins").addClass("active")
</script>  
