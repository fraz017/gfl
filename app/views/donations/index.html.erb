<section class="content-header">
  <h1>
    Dashboard
    <small>Donations</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listing Donations</h3>
          <hr>
          <h3>Funds Available: <b>Rs <%= funds %> </b></h3>
          <div class="box-tools">
            <div class="input-group">
              <%= link_to '<i class="fa fa-plus"></i> Add Donation'.html_safe, new_donation_path, class: "btn btn-success" %>
            </div>
          </div>
        </div><!-- /.box-header -->
        <br>

        <div class="box-body table-responsive no-padding"> 

          <table class="table table-hover table-bordered">
            <tbody><tr>
              <th>Amount</th>
              <th>Name</th>
              <th>City</th>
              <th>State</th>
              <th>Country</th>
              <th>Contact number</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
            <%@donations.each do |donation|%>
              <tr>
                <td><%= donation.amount %></td>
                <td><%= donation.name %></td>
                <td><%= donation.city %></td>
                <td><%= donation.state %></td>
                <td><%= donation.country %></td>
                <td><%= donation.contact_number %></td>
                <td><%= donation.email %></td>
                <td><%= link_to 'Show', donation, class: "btn btn-xs btn-primary" %>
                <%= link_to 'Edit', edit_donation_path(donation), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
              </tr>
            <%end%>
            <%if @donations.count < 1%>
            <tr>
              <td colspan="5" class="box-title"><h3>You have not recieved any donations yet. Add some</h3></td>
            </tr>
            <%end%>
          </tbody></table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>  

<script>
  $("ul.sidebar-menu li").removeClass("active")
  $("ul.sidebar-menu li:nth-child(5)").addClass("active")
</script>  