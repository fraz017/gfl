<section class="content-header">
  <h1>
    Dashboard
    <small>Doctors</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listing Doctors</h3>
          <div class="box-tools">
            <div class="input-group">
              <%= link_to '<i class="fa fa-plus"></i> Add Doctor'.html_safe, new_doctor_path, class: "btn btn-success" %>
            </div>
          </div>
        </div><!-- /.box-header -->
        <br>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover table-bordered">
            <tbody><tr>
              <th>Email</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Mobile Number</th>
              <th>Actions</th>
            </tr>
            <%@doctors.each do |user|%>
              <tr>
                <td><%=mail_to user.email %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.mobile_number %></td>
                <td><%= link_to 'Show', user, class: "btn btn-xs btn-primary" %>
                <%= link_to 'Edit', edit_doctor_path(user), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
              </tr>
            <%end%>
            <%if @doctors.count < 1%>
            <tr>
              <td colspan="5" class="box-title"><h3>You don not have any doctors yet. Add some</h3></td>
            </tr>
            <%end%>
          </tbody></table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>

<script>
  $("ul.sidebar-menu li").removeClass("active")
  $("ul.sidebar-menu li#doctors").addClass("active")
</script>  