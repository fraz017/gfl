<section class="content-header">
  <h1>
    Dashboard
    <small>Disbursment</small>
  </h1>

  <ol class="breadcrumb">
    <li><%= link_to "Cases", cases_path %></li>
    <li class="active">Disbursments</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listing Disbursments For the Case</h3>
          <div class="box-tools">
            <div class="input-group">
              <%= link_to '<i class="fa fa-plus"></i> Add Disbursment'.html_safe, new_case_disbursment_path, class: "btn btn-success" %>
            </div>
          </div>
        </div><!-- /.box-header -->
        <br>

        <div class="box-body table-responsive no-padding"> 

          <table class="table table-hover table-bordered">
            <tbody><tr>
              <th>Amount</th>
              <th>Date of Disbursment</th>
              <th>Actions</th>
            </tr>
            <%@disbursments.each do |disbursement|%>
              <tr>
                <td><%= disbursement.amount %></td>
                <td><%= disbursement.created_at.strftime("%-d %b. %Y") %></td>
                <td><%= link_to 'Show', case_disbursment_path(@case, disbursement), class: "btn btn-xs btn-primary" %>
                <%= link_to 'Edit', edit_case_disbursment_path(@case, disbursement), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', case_disbursment_path(@case, disbursement), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
              </tr>
            <%end%>
            <%if @disbursments.count < 1%>
            <tr>
              <td colspan="5" class="box-title"><h3>You have not added any disbursements yet. Add some</h3></td>
            </tr>
            <%end%>
          </tbody></table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>
<script>
  $("ul.sidebar-menu li").removeClass("active")
</script>  