<!DOCTYPE html>
<html>
<head>
  <title>Good For Life</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
	<div class="wrapper">
		<header class="main-header">
      <!-- Logo -->
      <a href="/" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>G</b>FL</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Good </b>For Life</span>
      </a>
      <!-- Header Navbar: style can be found in header.less -->
      <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <!-- Messages: style can be found in dropdown.less-->
            <li class="dropdown messages-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.role.to_s.titleize %>
                <i class="fa fa-gears"></i>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <!-- inner menu: contains the actual data -->
                  <ul class="menu">
                    <li><!-- start message -->
                      <%= link_to '<i class="fa fa-user"></i> Profile'.html_safe, "/profile" %>
                    </li><!-- end message -->
                    <li><!-- start message -->
                      <%= link_to('<i class="fa fa-sign-out"></i> Logout'.html_safe, destroy_user_session_path, :method => :delete) %>
                    </li><!-- end message -->
                  </ul>  
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
      <!-- sidebar: style can be found in sidebar.less -->
      <section class="sidebar">
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
          <li class="header">MAIN NAVIGATION</li>
          <li id="cases" class="active">
            <a href="/cases">
              <i class="fa fa-heartbeat"></i> <span>Cases</span>
            </a>
          </li>
          <% if current_user.admin? %>
            <li id="donations">
              <a href="/donations">
                <i class="fa fa-money"></i> <span>Donations</span>
              </a>
            </li>
            <li id="admins">
              <a href="/admins">
                <i class="fa fa-users"></i> <span>Admins</span>
              </a>
            </li>
            <li id="manager">
              <a href="/users">
                <i class="fa fa-users"></i> <span>Case Managers</span>
              </a>
            </li>
            <li id="doctors">
              <a href="/doctors">
                <i class="fa fa-users"></i> <span>Doctors</span>
              </a>
            </li>
            <li id="reports">
              <a href="/reports">
                <i class="fa fa-line-chart"></i> <span>Reports</span>
              </a>
            </li>
          <% end %>
          <!-- <li>
            <a href="#">
              <i class="fa fa-bank"></i> <span>Donors</span>
            </a>
          </li> -->
        </ul>
      </section>
      <!-- /.sidebar -->
    </aside>
    <div class="content-wrapper">
			<%= yield %>
		</div>	
	</div>

</body>
</html>
