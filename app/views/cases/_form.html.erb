<%= form_for(@case) do |f| %>
  <% if @case.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>Error!</h2>

      <ul>
      <% @case.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box-body">
    <div class="form-group">
      <label>Budget</label>
      <%= f.text_field :budget, :class=> "form-control", :placeholder=>"Budget" %>
    </div>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, :class=> "form-control", :placeholder=>"Name" %>
    </div>
    <div class="form-group">
      <label>Amount Recieved</label>
      <%= f.text_field :recieved, :class=> "form-control", :placeholder=>"Amount Recieved" %>
    </div>
    <% if current_user.admin? %>
      <div class="form-group">
        <label>Assign Manager</label>
        <%= f.collection_select :user_id, User.all, :id, :first_name, {:prompt=>"Select a Manager"}, {:class=> "form-control"} %>
      </div>
    <% end %>  
  </div><!-- /.box-body -->

  <div class="box-footer">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
