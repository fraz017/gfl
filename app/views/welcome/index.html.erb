    $.ajax({
      type: "POST",
      url: "/caseReports",
      data: {
        month: $(this).attr("data-id")
      },
      dataType: "script",
      success: function () {
      }
    });
  }); 

  $(".change-donations").click(function(){
    $.ajax({
      type: "POST",
      url: "/donationReports",
      data: {
        month: $(this).attr("data-id")
      },
      dataType: "script",
      success: function () {
      }
    });
  }); 
</script>  