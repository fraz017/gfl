<section class="content-header">
  <h1>
    Dashboard
    <small>Disbursment</small>
  </h1>
  <ol class="breadcrumb">
  	<li><%= link_to "Cases", cases_path %></li>
    <li><%= link_to "Disbursments", case_disbursments_path %></li>
    <li class="active">Show Disbursment</li>
  </ol>
</section>
<section class="content">
	<div class="row">
		<div class="col-md-12">
	    <!-- general form elements -->
	    <div class="box box-primary">
	      <div class="box-header with-border">
	        <h3 class="box-title">Show Disbursment</h3>
	      </div><!-- /.box-header -->
	      <!-- form start -->
	      <div class="box-body">
	      	<div class="form-group">
		      	<p>
						  <strong>Amount:</strong>
						  <%= @disbursment.amount %>
						</p>
		    	</div>
		    	<div class="form-group">
						<p>
						  <strong>Details:</strong>
						  <%= @disbursment.details.html_safe %>
						</p>
					</div>

					<div class="form-group">
						<p>
						  <strong>Video:</strong>
						  <%= videojs_rails source: @disbursment.video.url, setup: "{}", controls: true, width:"400", height: "200" %>
						</p>
					</div>	
				</div>
			</div>
		</div>
	</div>
</section>
<script>
  $("ul.sidebar-menu li").removeClass("active")
</script>  
